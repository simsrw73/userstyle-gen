{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "env": {
    "jest": true,
    "node": true
  },
  "rules": {
    "func-names": ["error", "as-needed"],
    "quotes": ["error", "single"],
    "no-use-before-define": ["error", { "functions": false }],
    "no-underscore-dangle": 0,

    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 90
      }
    ]
  }
}
